{
  "name": "@universal-login/ops",
  "version": "0.5.3",
  "description": "",
  "main": "dist/cjs/src/index.js",
  "types": "dist/esm/src/index.d.ts",
  "module": "dist/esm/src/index.js",
  "bin": {
    "universal-login": "./bin/universal-login"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "yarn build:cjs && yarn build:esm",
    "copy:contracts:cjs": "cpx \"src/contracts/**/*\" dist/cjs/src/contracts",
    "copy:contracts:esm": "cpx \"src/contracts/**/*\" dist/esm/src/contracts",
    "build:cjs": "tsc --outDir dist/cjs --p tsconfig.build.json --module commonjs && yarn copy:contracts:cjs",
    "build:esm": "tsc --outDir dist/esm --p tsconfig.build.json --module ES6 && yarn copy:contracts:esm",
    "lint": "eslint '{src,test}/**/*.{ts,js}'",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register/transpile-only 'test/**/*.{ts,js}'",
    "cli": "ts-node ./scripts/cli",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@universal-login/commons": "0.5.3",
    "@universal-login/contracts": "0.5.3",
    "@universal-login/relayer": "0.5.3",
    "@universal-login/sdk": "0.5.3",
    "cross-spawn": "^6.0.5",
    "dotenv": "^8.1.0",
    "ens-builder": "^2.0.1",
    "ethereum-waffle": "^2.1.2",
    "ethers": "^4.0.39",
    "ganache-cli": "^6.4.5",
    "ganache-core": "^2.6.1",
    "knex": "^0.20.0",
    "lodash.clonedeep": "^4.5.0",
    "yargs": "^12.0.5"
  },
  "resolutions": {
    "web3": "1.0.0-beta.37"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/mocha": "^5.2.5",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.5.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.4.1",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}
