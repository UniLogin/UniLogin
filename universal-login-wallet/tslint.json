{
  "extends": [
    "../tslint.json",
    "tslint-react"
  ],
  "rules": {
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "variable-name": ["allow-pascal-case"],
    "eofline": true,
    "quotemark": [true, "single", "jsx-double"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "jsx-boolean-value": ["never"],
    "trailing-comma": ["error", "never"]
  }
}
